<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">#589F5B</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="textViewStyle">
        <item name="android:textSize">@dimen/textSizes</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textColor">@android:color/black</item>

    </style>

    <style name="textViewInputs">
        <item name="android:textSize">@dimen/textSizes</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textColor">#252424</item>
    </style>

    <style name="textViewTitles">
        <item name="android:textSize">@dimen/textTitleSize</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="next" parent="Widget.AppCompat.Button.Colored">
        <item name="colorButtonNormal">@color/next_screen_color</item>
        <item name="colorControlHighlight">@color/selected_color</item>
        <item name="android:textColor">@color/white</item>
        <item name="colorAccent">@color/colorAccentButton</item>
    </style>

    <style name="cancel_button" parent="Widget.AppCompat.Button.Colored">
        <item name="android:buttonStyle">@style/Widget.AppCompat.Button.Borderless.Colored</item>
        <item name="android:textColor">@color/grey_button_color</item>
        <item name="colorControlHighlight">@color/cancel_red_color</item>
    </style>
</resources>